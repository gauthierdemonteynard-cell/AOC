{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",

    "paths": {
      "@utils/*": ["utils/*"],
      "@days/*": ["days/*"]
    }
  },
  "include": ["src"]
}
